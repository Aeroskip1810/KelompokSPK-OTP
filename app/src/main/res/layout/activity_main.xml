<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/frameLayoutRoot">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="OTP Verifikasi"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="100sp"
        android:layout_marginBottom="30sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10sp"
        android:src="@drawable/back" />
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:src="@drawable/in" />
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="160sp"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="30sp"
        android:text="Masukan kode Verifikasi yang telah dikirimkan ke email anda."
        android:textAlignment="center"
        android:textColor="#838BA1"
        android:textSize="20sp"
        android:textStyle="" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="380sp"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="30sp"
        android:text="1:59 Detik"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50sp"
        android:layout_marginTop="410sp"
        android:layout_marginEnd="50sp"
        android:layout_marginBottom="30sp"
        android:text="Belum terima kode?  Kirim Ulang"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextOne"
            android:textStyle="bold"
            android:textSize="15pt"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextTwo"
            android:textStyle="bold"
            android:textSize="15pt"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>


        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextThree"
            android:textStyle="bold"
            android:textSize="15pt"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>


        <EditText
            android:layout_marginStart="10dp"
            android:enabled="false"
            android:cursorVisible="false"
            android:imeOptions="actionNone"
            android:maxLength="1"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:gravity="center"
            android:id="@+id/editTextFour"
            android:textStyle="bold"
            android:textSize="15pt"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:layout_width="40dp"
            android:layout_height="60dp"/>

    </LinearLayout>

</FrameLayout>